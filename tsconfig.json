{
	"compilerOptions": {
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"rootDir": ".",
		"outDir": "./dist",
		"paths": {
			"@/*": ["*"]
		},
		"target": "ES6",
		"module": "CommonJS",
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["./**/*", "./**/*.json"],
	"exclude": ["node_modules"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
